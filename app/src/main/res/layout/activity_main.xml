<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#424242"
    tools:context="com.example.android.musicalstructureapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/artists"
            style="@style/WindowMusicStyle">

            <TextView
                android:text="@string/artists"
                style="@style/TextMusicStyle"/>

            <ImageView
                style="@style/ImageMusicStyle"
                android:src="@drawable/mikrofon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/albums"
            style="@style/WindowMusicStyle">

            <TextView
                android:text="@string/albums"
                style="@style/TextMusicStyle"/>

            <ImageView
                style="@style/ImageMusicStyle"
                android:src="@drawable/plyta" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tracks"
        style="@style/WindowMusicStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tracks"
            style="@style/TextMusicStyle"/>

        <ImageView
            style="@style/ImageMusicStyle"
            android:src="@drawable/playlist" />

    </LinearLayout>

</LinearLayout>